<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_hs">


    <Button
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:text="Log Out"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:typeface="serif" />

    <Button
        android:id="@+id/addNewItem"
        android:layout_below="@id/listview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="-175dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:text="Add New Menu Item"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/complaints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Menu Items"
        android:typeface="serif"
        android:layout_marginStart="50dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview2"
        android:layout_below="@id/complaints"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="200dp"
        />

    <Button
        android:id="@+id/returnComplaints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addNewItem"
        android:layout_marginStart="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/black"
        android:minHeight="48dp"
        android:text="Go to Requests"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:typeface="serif" />

</RelativeLayout>