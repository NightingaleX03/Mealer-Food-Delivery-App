<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:background="@drawable/dialog_box">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="140dp"
                android:layout_marginBottom="5dp"
                android:text="Edit Menu Item"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:hint="Meal Name"
                android:minHeight="48dp"

                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/mealType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/itemName"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:hint="Meal Type"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/cusineType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mealType"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:hint="Cusine Type"
                android:minHeight="48dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/listOfIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cusineType"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:hint="List of Ingredients"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:minHeight="48dp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/allergens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/listOfIngredients"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:hint="Allergens"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:minHeight="48dp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/allergens"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:hint="Price"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:minHeight="48dp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/price"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:hint="Description"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:minHeight="48dp"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="MissingConstraints" />

            <Spinner
                android:id="@+id/spinner_availability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:minHeight="48dp"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />


            <Button
                android:id="@+id/btnsaveChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_availability"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="200dp"
                android:backgroundTint="@color/black"
                android:minHeight="48dp"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btnDeleteItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_availability"
                android:layout_marginStart="200dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:backgroundTint="@color/black"
                android:text="Delete Item"
                android:textStyle="bold"
                android:typeface="serif"
                tools:ignore="MissingConstraints" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>